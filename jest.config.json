{
  "verbose": true,
  "roots": ["<rootDir>/test"],
  "transform": {
    ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
  },
  "testRegex": "(/spec/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "globals": {
    "window": {},
    "ts-jest": {
      "tsConfigFile": "./test/tsconfig.json",
      "enableTsDiagnostics": true
    }
  }
}
